{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "BldFile",
            "type": "shell",
            "command": "g++",
            "args": [
                "-w",
                "-g",
                "${workspaceRoot}/pipeline.cpp",
                "-o",
                "${workspaceRoot}/pipeline.exe",
                "-lSDL2"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "BldGLFile",
            "type": "shell",
            "command": "g++",
            "args": [
                "${workspaceRoot}/gl.cpp",
                "-lopengl32",
                "-lglew32",
                "-g",
                "-lSDL2",
                "-lmingw32",
                "-o",
                "${workspaceRoot}/GL.exe",
            ],
            "group": "build",
            "problemMatcher": []
        }
    ]
}